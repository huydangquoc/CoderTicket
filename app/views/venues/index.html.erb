<h1>Venue</h1>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Venue</th>
      <th>Address</th>
      <th>Region</th>
    </tr>
  </thead>
  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.full_address %></td>
        <td><%= venue.region.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h1>Add New Venue</h1>
<%= form_for @venue do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "form-control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :full_address, class: "form-control-label" %>
    <%= f.text_area :full_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Region", class: 'form-control-label' %>
    <%= f.select(:region_id) do %>
      <% Region.all.each do |region| %>
        <%= content_tag(:option, "#{region.name}", value: region.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.submit "Create", class: "btn btn-default" %>
  </div>
<% end %>