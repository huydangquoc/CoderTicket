<!DOCTYPE html>
<html>
  <head>
    <title>CsTemplate</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-inverse">
      <a class="navbar-brand" href="<%= root_path %>">
        Coder Ticket
      </a>
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li class="nav-item">
            <%= link_to "New Event", new_event_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Publish", unpublished_events_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "My Post", published_events_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Venue", venues_path, class: 'nav-link' %>
          </li>
          <li class="nav-item pull-xs-right">
            <%= link_to "Log Out #{current_user.name}", logout_path, method: 'delete', class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Log In", new_session_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </nav>
    <% if flash.any? %>
      <% flash.each do |key, value| %>
        <div class="alert <%= flash_class_name(key) %>"><%= value %></div>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>