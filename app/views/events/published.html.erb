<h1>My Published Events</h1>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Event Name</th>
      <th>Created at</th>
      <th>Published at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.created_at.strftime("%d %b  %Y at %I:%M%p")%></td>
        <td><%= time_ago_in_words(event.published_at)%> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>